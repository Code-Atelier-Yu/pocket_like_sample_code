{
  "manifest_version": 3,
  "name": "udemy-pocket-extension",
  "version": "1.0",
  "description": "Pocketライクアプリへの記事保存拡張機能",
  
  "permissions": [
    "activeTab",
    "storage",
    "cookies"
  ],
  
  "host_permissions": [
    "https://mypocket-mu.vercel.app/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "my-pocketに保存",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}